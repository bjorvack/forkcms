{% extends 'Layout/Templates/base.html.twig' %}
{% import 'Layout/Templates/macros.html.twig' as macro %}

{% block actionbar %}

{% endblock %}

{% block content %}
{{ form_start(form, {attr: {class: 'fork-form'}}) }}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="card card-default">
        <div class="card-heading">
          <h2 class="card-title">
            {{ 'lbl.MetaNavigation'|trans|ucfirst }}
          </h2>
        </div>
        <div class="card-body">
          {{ form_row(form.metaNavigation) }}
          <small class="form-text text-muted">{{ 'msg.HelpMetaNavigation'|trans }}</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="card card-default">
        <div class="card-heading">
          <h2 class="card-title">
            {{ 'lbl.OfflinePage'|trans|ucfirst }}
          </h2>
        </div>
        <div class="card-body">
          {{ form_rest(form) }}
        </div>
      </div>
    </div>
  </div>

  <div class="fork-module-actions">
    <div class="btn-toolbar">
      <div class="btn-group ml-auto" role="group">
        {{ macro.buttonIcon('', 'save', 'lbl.Save'|trans|ucfirst, 'btn-primary', { "id":"save", "type":"submit", "name":"save" }) }}
      </div>
    </div>
  </div>
  {{ form_end(form) }}
{% endblock %}
